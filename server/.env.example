# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
APP_NAME=Social Media Marketing Platform
APP_PORT=5000
APP_URL=http://localhost:5000
CLIENT_URL=http://localhost:5173

# ============================================
# MONGODB ATLAS CONFIGURATION
# ============================================
MONGODB_URI=mongodb+srv://
MONGODB_DB_NAME=social_media_platform

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB_CACHE=0
REDIS_DB_SESSION=1
REDIS_DB_QUEUE=2

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=2h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# GOOGLE OAUTH (FOR USER AUTHENTICATION)
# ============================================
GOOGLE_AUTH_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_AUTH_CLIENT_SECRET=your_google_oauth_client_secret_here
GOOGLE_AUTH_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_LIFETIME=7200000
SESSION_SECURE=false

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/mpeg,video/quicktime

# ============================================
# EMAIL CONFIGURATION (NODEMAILER)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@socialmedia.local
MAIL_FROM_NAME=Social Media Marketing Platform

# ============================================
# SOCIAL MEDIA OAUTH - LINKEDIN
# ============================================
LINKEDIN_CLIENT_ID=linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=linkedin_client_secret_here  
LINKEDIN_CALLBACK_URL=http://localhost:5000/api/v1/channels/oauth/linkedin/callback
LINKEDIN_ENABLED=true
LINKEDIN_USE_REAL_API=true

# ============================================
# SOCIAL MEDIA OAUTH - FACEBOOK
# ============================================
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/v1/channels/oauth/facebook/callback
FACEBOOK_ENABLED=true
FACEBOOK_USE_REAL_API=true

# ============================================
# SOCIAL MEDIA OAUTH - TWITTER/X
# ============================================
# OAuth 2.0 Credentials
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# API v1.1 Credentials (for media upload)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# OAuth Settings
TWITTER_CALLBACK_URL=http://localhost:5000/api/v1/channels/oauth/twitter/callback
TWITTER_SCOPES=tweet.read,tweet.write,users.read,offline.access

# Configuration
TWITTER_API_VERSION=2
TWITTER_ENABLED=true
TWITTER_USE_REAL_API=true

# Free Tier Limits (for tracking)
TWITTER_FREE_TIER_POST_LIMIT=17
TWITTER_FREE_TIER_WINDOW=86400000

# ============================================
# SOCIAL MEDIA OAUTH - INSTAGRAM
# ============================================
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_CALLBACK_URL=http://localhost:5000/api/v1/channels/oauth/instagram/callback
INSTAGRAM_ENABLED=true
INSTAGRAM_USE_REAL_API=false

# ============================================
# SOCIAL MEDIA OAUTH - YOUTUBE
# ============================================
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_CALLBACK_URL=http://localhost:5000/api/v1/channels/oauth/youtube/callback
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_ENABLED=true
YOUTUBE_USE_REAL_API=false

# ============================================
# PROVIDER MODE CONFIGURATION
# ============================================
SOCIAL_PROVIDER_MODE=mixed
ENABLE_SOCIAL_POSTING=true
ENABLE_ANALYTICS_COLLECTION=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log
LOG_ERROR_FILE_PATH=logs/error.log

# ============================================
# ENCRYPTION
# ============================================
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-in-production
ENCRYPTION_ALGORITHM=aes-256-cbc

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_QUEUE_PROCESSING=true
ENABLE_ANALYTICS_SYNC=true
ENABLE_TOKEN_REFRESH=true

# ============================================
# NOTIFICATION EMAIL
# ============================================
NOTIFICATION_EMAIL=
