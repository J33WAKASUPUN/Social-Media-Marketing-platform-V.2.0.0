{
  "name": "social-media-platform-api",
  "version": "2.0.0",
  "description": "Social Media Marketing Platform - Express.js REST API",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docker:redis": "docker run -d --name smp-redis -p 6379:6379 redis:7-alpine",
    "docker:redis:stop": "docker stop smp-redis && docker rm smp-redis",
    "seed": "node src/database/seeders/index.js"
  },
  "keywords": [
    "social-media",
    "marketing",
    "oauth",
    "express",
    "mongodb"
  ],
  "author": "Jeewaka Supun",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "bull": "^4.12.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "multer": "^1.4.5-lts.1",
    "crypto-js": "^4.2.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "sharp": "^0.33.1",
    "date-fns": "^3.0.6",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "mongodb-memory-server": "^9.1.4",
    "faker": "^5.5.3",
    "@faker-js/faker": "^8.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
