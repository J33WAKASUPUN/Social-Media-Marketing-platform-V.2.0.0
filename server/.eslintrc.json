{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id", "__v"] }],
    "consistent-return": "off",
    "no-param-reassign": ["error", { "props": false }],
    "max-len": ["error", { "code": 120, "ignoreComments": true }],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off"
  }
}
